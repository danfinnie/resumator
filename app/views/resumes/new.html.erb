<div ng-controller="EverythingController">
  <h1>Jobs</h1>
  <ul>
    <li ng-repeat="job in jobs">
      <label>
        <input type="checkbox" ng-model="job.selected" />
        {{ job.title }} at {{ job.place }}
    </label>
    </li>
  </ul>

  <h1>Education</h1>
  <ul>
    <li ng-repeat="education in educations">
      <label>
        <input type="checkbox" ng-model="education.selected" />
        {{ education.title }} at {{ education.place }}
    </label>
    </li>
  </ul>

  <h1>Resume</h1>
  <h2>Education</h2>
  <div ng-repeat="education in selected_educations">
    <h3>{{ education.title }} from {{ education.place }} ({{ education.gpa }} GPA)</h3>
    <h4>{{ education.obtained_at | date:'MMMM yyyy' }}</h4>
    <div ng-bind-html="education.description.html"></div>
  </div>

  <h2>Experience</h2>
  <div ng-repeat="job in selected_jobs">
    <h3>{{ job.title }} at {{ job.place }}</h3>
    <h4>{{ job.started | date:'MMMM yyyy' }} &mdash; {{ job.ended | date:'MMMM yyyy' }}</h4>
    <div ng-bind-html="job.description.html"></div>
  </div>
</div>
