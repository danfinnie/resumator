<div>
  <div class="jobs" ng-controller="JobsController">
    <h2>Jobs</h2>
    <table class="table">
      <thead>
        <tr>
          <th>Title</th>
          <th>Place</th>
          <th>Location</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <tr ng-repeat="job in jobs">
          <td>{{ job.title }}</td>
          <td>{{ job.place }}</td>
          <td>{{ job.location }}</td>
          <td>
            <button class="btn btn-danger" ng-click="delete(job)">Delete</button>
          </td>
        </tr>
      </tbody>
    </table>
    <button class="btn" ng-click="toggleShowAddForm()">Add</button>
    <div ng-if="showAddForm">
      <form class="well form-horizontal" role="form">
        <div class="form-group">
          <label for="title" class="col-sm-2 control-label">Title</label>
          <div class="col-sm-10">
            <input type="text" id="title" class="form-control" placeholder="Title" ng-model="newJob.title">
          </div>
        </div>
        <div class="form-group">
          <label for="place" class="col-sm-2 control-label">Place</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="place" placeholder="Place" ng-model="newJob.place">
          </div>
        </div>
        <div class="form-group">
          <label for="location" class="col-sm-2 control-label">Location</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="location" placeholder="Location" ng-model="newJob.location">
          </div>
        </div>
        <div class="form-group">
          <label for="started" class="col-sm-2 control-label">Started (date)</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="started" placeholder="2010-03-04" ng-model="newJob.started">
          </div>
        </div>
        <div class="form-group">
          <label for="ended" class="col-sm-2 control-label">Ended (date)</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="ended" placeholder="2010-10-04" ng-model="newJob.ended">
          </div>
        </div>
        <div class="form-group">
          <label for="description" class="col-sm-2 control-label">Description</label>
          <div class="col-sm-10">
            <textarea class="form-control" id="description" placeholder="Description" ng-model="newJob.description">
            </textarea>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default" ng-click="save()">Save</button>
          </div>
        </div>
      </form>
    </div>
  </div>

  <div class="educations" ng-controller="EducationsController">
    <h2>Educations</h2>
    <table class="table">
      <thead>
        <tr>
          <th>Title</th>
          <th>Place</th>
          <th>Obtained At</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <tr ng-repeat="education in educations">
          <td>{{ education.title }}</td>
          <td>{{ education.place }}</td>
          <td>{{ education.obtained_at }}</td>
          <td>
            <button class="btn btn-danger" ng-click="delete(education)">Delete</button>
          </td>
        </tr>
      </tbody>
    </table>
    <button class="btn" ng-click="toggleShowAddForm()">Add</button>
    <div ng-if="showAddForm">
      <form class="well form-horizontal" role="form">
        <div class="form-group">
          <label for="title" class="col-sm-2 control-label">Title</label>
          <div class="col-sm-10">
            <input type="text" id="title" class="form-control" placeholder="Title" ng-model="newEducation.title">
          </div>
        </div>
        <div class="form-group">
          <label for="place" class="col-sm-2 control-label">Place</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="place" placeholder="Place" ng-model="newEducation.place">
          </div>
        </div>
        <div class="form-group">
          <label for="gpa" class="col-sm-2 control-label">GPA</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="gpa" placeholder="4.0" ng-model="newEducation.gpa">
          </div>
        </div>
        <div class="form-group">
          <label for="obtained_at" class="col-sm-2 control-label">Obtained (date)</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="obtained_at" placeholder="2010-03-04" ng-model="newEducation.obtained_at">
          </div>
        </div>
        <div class="form-group">
          <label for="description" class="col-sm-2 control-label">Description</label>
          <div class="col-sm-10">
            <textarea class="form-control" id="description" placeholder="Description" ng-model="newEducation.description">
            </textarea>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default" ng-click="save()">Save</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
